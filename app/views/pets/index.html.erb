<div id="container" >
  <div id="body">

    <div style="width: 100%; height: 600px;"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV["MAPBOX_API_KEY"] %>">
    </div>
    <div class="search-bar">
      <%= form_with url: pets_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a pet"
        %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    <div>
  </div>
    <div>
      <h2>Top Rated Pets</h2>
    </div>
  <div class="cards" >
     <% @pets.each do |pet|  %>
     <div class="cardbody">
        <div class="card-pet" >

          <%= cl_image_tag pet.photos.first.key %>

          <div class="card-pet-infos">
            <div>
            <h2><%= link_to pet.name, pet_path(pet) {:style=>'color:black; text-decoration:none;'}%></h2>

             <p><%= pet.details%></p>

            </div>
            <h2 class="card-pet-pricing">Species: <br><%= pet.species %></h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
