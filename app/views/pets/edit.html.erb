<h2>Updating <%= @pet.name %></h2>

<%= simple_form_for(@pet) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :details %>
  <%= f.input :species %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <%= f.submit %>
<% end %>


<%= link_to "Back to list", pets_path(@pet)%>
