<div class="body">
  <h1>create new pet</h1>
  <%= simple_form_for @pet do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :details %>
    <%= f.input :species %>
    <%= f.input :diet %>
    <%= f.input :lifestyle %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, class:"btn" %>
  <% end %>
  <div class="btn">
    <%= link_to "Back to list", pets_path(@pet),{:style=>'color:black; text-decoration:none;'}%>
  </div>
</div>
